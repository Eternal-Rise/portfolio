section.contact
  .inner.contact__inner
    form.form

      .form__block
        .form__block-item
          label.form__label(for="name") Name
          input.form__input#name(
            type="text", name="name" required
          )

        .form__block-item
          label.form__label(for="email") Email
          input.form__input#email(
            type="email", name="email" required
          )

      .form__block
        .form__block-item
          label.form__label(for="message") Message
          textarea.form__textarea#message(
            name='message'
            rows='6'
            minlength="100"
            required
            )

      ul.list._inline
        li.list__item
          input.btn._primary(type='submit', value='Send Message')
        li.list__item
          input.btn(type='reset', value='Clear')

    .c-5-lg
      .contact-method
        span.icon.alt.fas.fa-envelope
        h3 Email
        a.link(href="mailto:information@untitled.tld")
          | information@untitled.tld

      .contact-method
        span.icon.alt.fas.fa-phone
        h3 Phone
        span (000) 000-0000

      .contact-method
        span.icon.alt.fas.fa-home
        h3 Address
        span
          | 1234 Somewhere Road #5432
          br
          | Nashville, TN 00000
          br
          | United States of America